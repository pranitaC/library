<html>
<head>
<title>Library management system</title>
</head>

<body>
  <table >
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Edition</th>
      <th>Status</th>
    </tr>
    <% for(var i = 0; i < books.length; i++) { %>
    <tr>
      <td><%= books[i].title %></td>
      <td><%= books[i].author %></td>
      <td><%= books[i].edition %></td>
      <td><%= books[i].status %></td>
      <td>
        <form method="POST" action="/books/<%= books[i]._id %>?_method=DELETE">
          <input type="submit" value="Delete"/>
        </form>
      </td>
    </tr>
    <% } %>
  </table>
  
  <a href="/books/new">Add new book details</a>
  
</body>
</html>
