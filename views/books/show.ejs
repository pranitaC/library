</head>

<body>
  <div>
    <h1>Showing book details</h1>
      <%- include('../layouts/bootstrap_header') %>
      <div class="form-group">
        <label>Title: <%= book.title %></label>
      </div>
      <div class="form-group">
        <label>Author: <%= book.author %></label>
      </div>
      <div class="form-group">
        <label>Edition: <%= book.edition %></label>
      </div>
      <div class="form-group">
        <label>Status: <%= book.status %></label>
      </div>
      <a class="btn btn-info" href="/books/<%= book._id %>/edit">Edit</a>
  </div>
</body>
</html>
