<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    
    <title>Library management system</title>
    
    <link rel="stylesheet" type="text/css" href="/stylesheets/bootstrap.css"></link>
    <link rel="stylesheet" type="text/css" href="/stylesheets/style.css"></link>
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="/javascripts/html5shiv.min.js"></script>
      <script src="/javascripts/respond.min.js"></script>
    <![endif]-->

  </head>
  <body>
    <div class="container">
      <h1>Add new book details</h1>
        <%- include('../layouts/bootstrap_header') %>
        <div class="row">
          <div class="col-lg-6">
            <form method="POST" action="/books">
              <div class="form-group">
                <label>Title:</label>
                <input class="form-control" type="text" name="book[title]"></input>
              </div>
              <div class="form-group">
                <label>Author:</label>
                <input class="form-control" type="text" name="book[author]"></input>
              </div>
              <div class="form-group">
                <label>Edition:</label>
                <input class="form-control" type="text" name="book[edition]"></input>
              </div>
                <div class="form-group">
                <label>Status:</label>
                <div>
                  <select class="form-control" name="book[status]">
                    <option value=''>Select status</option>
                    <option value='I'>Issued</option>
                    <option value='A'>Available</option>
                  </select>
                </div>
              </div>
              <div>
                <input class="btn btn-info" type="submit" value = "Create"/>
              </div>
            </form>
          </div>
        </div>
    </div>
  </body>
</html>
