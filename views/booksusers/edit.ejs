<html>
<head>
<title>Library management system</title>
</head>

<body>
  <h1>Edit book user</h1>
  <form method="POST" action="/booksusers/<%= bookuser._id %>?_method=PUT">
    <div>
      <label>User Id:</label>
      <input type="text" value="<%= bookuser.user_id %>" name="bookuser[user_id]"></input>
    </div>
    <div>
    <label>Book Id:</label>
      <input type="text" value="<%= bookuser.book_id %>" name="bookuser[book_id]"></input>
    </div>
    <div>
      <label>Issued on:</label>
      <input type="date" value="<%= bookuser.issued_on %>" name="bookuser[issued_on]"></input>
    </div>
    <div>
      <label>Returning date:</label>
      <input type="date" value="<%= bookuser.returned_on %>" name="bookuser[returned_on]"></input>
    </div>
    <div>
      <input type="submit" value = "update"/>
    </div>
  </form>
</body>
</html>
